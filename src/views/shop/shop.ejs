<%- include('../partials/header.ejs') %>
    <main class="shop container">
        <aside class="shop__busqueda">
            <form class="shop__form">
                <div class="shop__sector ">
                    <label for="busqueda" class="shop__title">BUSCAR</label>
                    <input class="shop-input bordes" type="text" name="busqueda" id="busqueda" placeholder="item o categoria">
                </div>
                <div class="shop__sector ">
                    <label class="shop__title" for="ordenar">Ordenar por:</label>
                    <select class="shop-input bordes" id="ordenar" name="ordenar" aria-label="Ordenar por">
                        <option class="ordenar__initialoption" selected value="mayor-a-menor">Mayor a menor</option>
                        <option value="menor-a-mayor">Menor a mayor</option>
                    </select>
                </div>
                <div class="shop__sector ">
                    <label for="" class="shop__title">PRECIO</label>
                    <div class="shop__subsector">
                        <label for="precio_min">MIN</label>
                        <input class="shop__input-number bordes" type="number" name="precio_min" id="precio_min" value="0">
                        <label for="precio_max">- MAX</label>
                        <input class="shop__input-number bordes" type="number" name="precio_max" id="precio_max" value="0">
                    </div>
                </div>
                <div class="shop__sector">
                    <label for="checkbox" class="shop__title">FILTRAR</label>
                    <div class="custom-checkbox">
                        <input type="checkbox" title="NUEVOS" id="nuevos">
                        <label for="nuevos"></label>
                        <span class="checkbox-text">NUEVOS</span>
                    </div>
                    <div class="custom-checkbox">
                        <input type="checkbox" title="OFERTAS" id="ofertas">
                        <label for="ofertas"></label>
                        <span class="checkbox-text">OFERTAS</span>
                    </div>
                    <div class="custom-checkbox">
                        <input type="checkbox" title="EDICION_ESPECIAL" id="edicion_especial">
                        <label for="edicion_especial"></label>
                        <span class="checkbox-text">EDICION ESPECIAL</span>
                    </div>
                    <div class="custom-checkbox">
                        <input type="checkbox" title="FAVORITOS" id="favoritos">
                        <label for="favoritos"></label>
                        <span class="checkbox-text">FAVORITOS</span>
                    </div>
                </div>
            </form>
        </aside>
        <section class="slider">
            <ul class="slider__items">
                <% rows.forEach( item => { %>
                    <li class="slider__item">
                        <article class="card-item">
                            <a class="card-item__link" href="/shop/item/<%= item.product_id %>">
                                <picture class="card-item__cover">
                                    <span class="card-item__tag">Nuevo</span>
                                    <img class="card-item__img--front" src="/img<%= item.img_front %>" alt="Figura coleccionable Funko de un Stormtrooper">
                                    <img class="card-item__img--back" src="/img<%= item.img_back %>" alt="Figura coleccionable Funko de un Stormtrooper en caja">    
                                </picture>
                                <div class="card-item__content">
                                    <p class="card-item__license"><%= item.licence_name %></p>
                                    <h4 class="card-item__name"><%= item.product_name %></h4>
                                    <p class="card-item__price">$ <%= item.product_price %>.-</p>
                                    <p class="card-item__promo">3 CUOTAS SIN INTERÃ‰S</p>
                                </div>
                            </a>
                        </article>
                    </li>                 
                <% }) %>
            </ul>

        </section>
        <section>

        </section>
    </main>
    <%- include('../partials/footer.ejs') %>
    <script src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js"></script>
</body>
</html>